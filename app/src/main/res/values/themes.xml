<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoreApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/eerieBlack</item>
        <item name="colorPrimaryVariant">@color/eerieBlack</item>
        <item name="colorOnPrimary">@color/eerieBlack</item>
        <item name="android:statusBarColor">@color/eerieBlack</item>
    </style>
    <style name="BottomNavigationViewFont" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8font_mdp</item>
        <item name="fontFamily">@font/iransans</item>
    </style>
    <!--Colored shadows-->
    <style name="ColoredShadowDark">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/royalBlue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/royalBlue</item>
    </style>

    <style name="ColoredShadowLight">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/cornflowerBlue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/cornflowerBlue</item>
    </style>
    <!--Shaped images-->
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--ProgressBar-->
    <style name="DarkProgressbar">
        <item name="colorAccent">@color/darkStrategy</item>
    </style>

    <style name="SalmonProgressbar">
        <item name="colorAccent">@color/salmon</item>
    </style>
    <!--Bottom sheet dialog-->
    <style name="RemoveDialogBackground" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>
    <!--Range Slider-->
    <style name="MyRangeStyle" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/BlueSlider</item>
        <item name="labelStyle">@style/Widget.Tooltip</item>
    </style>

    <style name="BlueSlider">
        <item name="colorPrimary">@color/dodgerBlue</item>
        <item name="colorOnPrimary">@color/lavender</item>
    </style>

    <style name="Widget.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/dodgerBlue</item>
        <item name="android:textAppearance">@style/TextAppearance.Tooltip</item>
    </style>

    <style name="TextAppearance.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>
    <!--Chips-->
    <style name="FilterChipsBackground" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/item_chip_background</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="FilterChipsText">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">@dimen/_9font_mdp</item>
        <item name="android:textColor">@color/item_chip_text</item>
    </style>

    <style name="DetailChipsBackground" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/item_chip_background_stoke</item>
        <item name="chipStrokeWidth">@dimen/_1mdp</item>
        <item name="chipBackgroundColor">@color/cultured</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="DetailChipsText">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">@dimen/_9font_mdp</item>
    </style>

    <!--Text input layout-->
    <style name="MediumTurquoiseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/cultured</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10mdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10mdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10mdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10mdp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="startIconTint">@color/mediumTurquoise</item>
    </style>

    <style name="MediumTurquoiseDropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/cultured</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10mdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10mdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10mdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10mdp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="startIconTint">@color/mediumTurquoise</item>
    </style>
    <!--Tab layout-->
    <style name="TabLayoutFontNormal" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">@dimen/_10font_mdp</item>
    </style>

    <style name="TabLayoutFontBold" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/iransans_bold</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
        <item name="android:textSize">@dimen/_10font_mdp</item>
    </style>

    <style name="Theme.StoreApp" parent="Base.Theme.StoreApp" />
</resources>