<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Not filled-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/whiteSmoke" />
            <corners android:radius="@dimen/_5mdp" />
        </shape>
    </item>
    <!--Select-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/_1mdp" android:color="@color/mediumTurquoise" />
            <solid android:color="@color/whiteSmoke" />
            <corners android:radius="@dimen/_5mdp" />
        </shape>
    </item>
    <!--Filled-->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/_1mdp" android:color="@color/whiteSmoke" />
            <solid android:color="@color/seaSerpent" />
            <corners android:radius="@dimen/_5mdp" />
        </shape>
    </item>
</selector>