<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white"
    android:orientation="vertical"
    android:padding="@dimen/_10mdp">
    <!--Edit profile-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuEditLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30mdp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/menuEditImg"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            android:background="@color/crayola"
            android:padding="@dimen/_7mdp"
            android:src="@drawable/user_pen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="1"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10mdp"
            android:drawablePadding="@dimen/_10mdp"
            android:text="@string/editProfile"
            android:textColor="@color/eerieBlack"
            android:textSize="@dimen/_9font_mdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menuEditImg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/_10mdp"
            android:layout_height="@dimen/_10mdp"
            android:src="@drawable/chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/eerieBlack" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Wallet-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuWalletLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="@dimen/_15mdp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/menuWalletImg"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            android:background="@color/caribbeanGreen"
            android:padding="@dimen/_8mdp"
            android:src="@drawable/wallet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="1"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10mdp"
            android:drawablePadding="@dimen/_10mdp"
            android:text="@string/increaseWallet"
            android:textColor="@color/eerieBlack"
            android:textSize="@dimen/_9font_mdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menuWalletImg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/_10mdp"
            android:layout_height="@dimen/_10mdp"
            android:src="@drawable/chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/eerieBlack" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Comments-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuCommentsLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="@dimen/_15mdp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/menuCommentsImg"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            android:background="@color/coral"
            android:padding="@dimen/_7mdp"
            android:src="@drawable/comments"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="1"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10mdp"
            android:drawablePadding="@dimen/_10mdp"
            android:text="@string/yourComments"
            android:textColor="@color/eerieBlack"
            android:textSize="@dimen/_9font_mdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menuCommentsImg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/_10mdp"
            android:layout_height="@dimen/_10mdp"
            android:src="@drawable/chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/eerieBlack" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Favorites-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuFavoritesLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="@dimen/_15mdp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/menuFavoritesImg"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            android:background="@color/chineseYellow"
            android:padding="@dimen/_7mdp"
            android:src="@drawable/stars"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="1"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10mdp"
            android:drawablePadding="@dimen/_10mdp"
            android:text="@string/yourFavorites"
            android:textColor="@color/eerieBlack"
            android:textSize="@dimen/_9font_mdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menuFavoritesImg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/_10mdp"
            android:layout_height="@dimen/_10mdp"
            android:src="@drawable/chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/eerieBlack" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Addresses-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuAddressesLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="@dimen/_15mdp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/menuAddressesImg"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            android:background="@color/blueJeans"
            android:padding="@dimen/_7mdp"
            android:src="@drawable/map_location_dot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="1"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10mdp"
            android:drawablePadding="@dimen/_10mdp"
            android:text="@string/yourAddresses"
            android:textColor="@color/eerieBlack"
            android:textSize="@dimen/_9font_mdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menuAddressesImg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/_10mdp"
            android:layout_height="@dimen/_10mdp"
            android:src="@drawable/chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/eerieBlack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>